#include <stdio.h>

int main(){
  int input,b;

  printf("Enter a number: ");
  scanf("%d",&input);
  if ( input >=1){
    for ( b=2;b<input;b++  ){
      if ( input%b ==0 ){
	printf("%d is not a prime number.\n",input);
	return 0;
      }
    }
    printf("%d is a prime number.\n",input);
    return 0;
  }
  else{
    printf("%d is not a prime number.\n",input);
    return 0;
  }

}
